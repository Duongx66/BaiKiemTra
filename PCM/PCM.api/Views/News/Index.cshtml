@model List<_999_News>

@{
    ViewData["Title"] = "Tin Tức & Thông Báo";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tin Tức & Thông Báo</h2>
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">+ Đăng Tin Mới</a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có tin tức nào.</div>
    }
    else
    {
        @foreach (var news in Model)
        {
            <div class="card mb-4 border-0 shadow-sm">
                <div class="row g-0">
                    @if (!string.IsNullOrEmpty(news.ImageUrl))
                    {
                        <div class="col-md-3">
                            <img src="@news.ImageUrl" class="img-fluid h-100 object-fit-cover" alt="@news.Title" />
                        </div>
                    }
                    <div class="col-md-@(string.IsNullOrEmpty(news.ImageUrl) ? "12" : "9")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    @if (news.IsPinned)
                                    {
                                        <i class="bi bi-pin-fill text-danger"></i>
                                    }
                                    @news.Title
                                </h5>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Edit", new { id = news.Id })" class="btn btn-outline-secondary">Sửa</a>
                                        <form asp-action="Delete" asp-route-id="@news.Id" method="post" style="display:inline;" onsubmit="return confirm('Xác nhận xoá?')">
                                            <button type="submit" class="btn btn-outline-danger">Xoá</button>
                                        </form>
                                    </div>
                                }
                            </div>

                            <p class="card-text">@Html.Raw(news.Content.Length > 300 ? news.Content.Substring(0, 300) + "..." : news.Content)</p>

                            <small class="text-muted d-block mb-3">
                                <i class="bi bi-calendar"></i> @news.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                | <strong>@news.CreatedBy</strong>
                            </small>

                            <a href="@Url.Action("Details", new { id = news.Id })" class="btn btn-sm btn-outline-primary">Xem Chi Tiết →</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
