@model List<PCM.Models._999_Match>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-white mb-0"><i class="fas fa-table-tennis"></i> Danh sách Trận đấu</h3>
    <a href="/Matches/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ghi nhận trận mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-calendar"></i> Ngày</th>
                        <th><i class="fas fa-table-tennis"></i> Sân</th>
                        <th><i class="fas fa-users"></i> Loại</th>
                        <th><i class="fas fa-user"></i> Người chơi</th>
                        <th><i class="fas fa-crown"></i> Kết quả</th>
                        <th><i class="fas fa-info-circle"></i> Trạng thái</th>
                        <th><i class="fas fa-star"></i> Rank</th>
                        <th width="150"><i class="fas fa-cogs"></i> Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">Chưa có trận đấu nào</td>
                        </tr>
                    }
                    @foreach (var match in Model)
                    {
                        <tr>
                            <td>@match.MatchDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(match.Court?.CourtName ?? "N/A")</td>
                            <td>
                                @if (match.MatchType == "Single")
                                {
                                    <span class="badge bg-info">1vs1</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">2vs2</span>
                                }
                            </td>
                            <td>
                                @if (match.MatchType == "Single")
                                {
                                    <small>@(match.Player1?.FullName ?? "N/A") vs @(match.Player2?.FullName ?? "N/A")</small>
                                }
                                else
                                {
                                    <small>
                                        <strong>A:</strong> @(match.Player1?.FullName ?? "N/A"), @(match.Player3?.FullName ?? "N/A")<br>
                                        <strong>B:</strong> @(match.Player2?.FullName ?? "N/A"), @(match.Player4?.FullName ?? "N/A")
                                    </small>
                                }
                            </td>
                            <td>
                                @if (match.Status == "Completed" && match.WinnerId.HasValue)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check"></i> Người thắng</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa có kết quả</span>
                                }
                            </td>
                            <td>
                                @if (match.Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else if (match.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hủy</span>
                                }
                            </td>
                            <td>
                                @if (match.IsRanked)
                                {
                                    <span class="badge bg-primary"><i class="fas fa-star"></i> Rank</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Casual</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-warning me-2" href="/Matches/Edit/@match.Id" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" href="/Matches/Delete/@match.Id" title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa trận đấu này?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
