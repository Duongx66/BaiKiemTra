@model PCM.api.Models._999_Match

@{
    ViewData["Title"] = "Ghi nhận trận đấu";
    var courts = (List<PCM.api.Models._999_Court>)ViewBag.Courts;
    var members = (List<PCM.api.Models._999_Member>)ViewBag.Members;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-table-tennis"></i> Ghi nhận Trận đấu mới</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-calendar"></i> Ngày giờ <span class="text-danger">*</span></label>
                            <input type="datetime-local" asp-for="MatchDate" class="form-control" required />
                            <span asp-validation-for="MatchDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-table-tennis"></i> Sân <span class="text-danger">*</span></label>
                            <select asp-for="CourtId" class="form-select" required>
                                <option value="0">-- Chọn sân --</option>
                                @foreach (var court in courts)
                                {
                                    <option value="@court.Id">@court.CourtName</option>
                                }
                            </select>
                            <span asp-validation-for="CourtId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-users"></i> Loại trận <span class="text-danger">*</span></label>
                            <select asp-for="MatchType" class="form-select" id="matchType" required onchange="updatePlayerFields()">
                                <option value="Single">1vs1 (Single)</option>
                                <option value="Doubles">2vs2 (Doubles)</option>
                            </select>
                            <span asp-validation-for="MatchType" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-star"></i> Loại trận đấu</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="IsRanked" id="isRanked" checked>
                                <label class="form-check-label" for="isRanked">
                                    Tính Rank DUPR
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Người chơi</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="fas fa-user"></i> Người chơi 1 <span class="text-danger">*</span></label>
                                    <select asp-for="Player1Id" class="form-select" required>
                                        <option value="0">-- Chọn --</option>
                                        @foreach (var member in members)
                                        {
                                            <option value="@member.Id">@member.FullName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Player1Id" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="fas fa-user"></i> Người chơi 2 <span class="text-danger">*</span></label>
                                    <select asp-for="Player2Id" class="form-select" required>
                                        <option value="0">-- Chọn --</option>
                                        @foreach (var member in members)
                                        {
                                            <option value="@member.Id">@member.FullName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Player2Id" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row" id="doublesFields" style="display:none;">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="fas fa-user"></i> Người chơi 3</label>
                                    <select asp-for="Player3Id" class="form-select">
                                        <option value="">-- Chọn --</option>
                                        @foreach (var member in members)
                                        {
                                            <option value="@member.Id">@member.FullName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Player3Id" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="fas fa-user"></i> Người chơi 4</label>
                                    <select asp-for="Player4Id" class="form-select">
                                        <option value="">-- Chọn --</option>
                                        @foreach (var member in members)
                                        {
                                            <option value="@member.Id">@member.FullName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Player4Id" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Kết quả</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label"><i class="fas fa-info-circle"></i> Trạng thái <span class="text-danger">*</span></label>
                                    <select asp-for="Status" class="form-select" required>
                                        <option value="Pending">Chờ xử lý</option>
                                        <option value="Completed">Hoàn thành</option>
                                        <option value="Cancelled">Hủy</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label"><i class="fas fa-crown"></i> Người thắng</label>
                                    <select asp-for="WinnerId" class="form-select">
                                        <option value="">-- Chưa có --</option>
                                        @foreach (var member in members)
                                        {
                                            <option value="@member.Id">@member.FullName</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label"><i class="fas fa-file-alt"></i> Ghi chú</label>
                                    <input type="text" asp-for="Notes" class="form-control" placeholder="VD: Set 21-15, 21-12" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary me-md-2">
                            <i class="fas fa-save"></i> Lưu trận đấu
                        </button>
                        <a href="/Matches" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function updatePlayerFields() {
    const matchType = document.getElementById('matchType').value;
    const doublesFields = document.getElementById('doublesFields');
    
    if (matchType === 'Doubles') {
        doublesFields.style.display = 'block';
    } else {
        doublesFields.style.display = 'none';
    }
}
</script>
