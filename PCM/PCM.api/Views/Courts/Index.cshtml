@model IEnumerable<PCM.Models._999_Court>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-white mb-0"><i class="fas fa-table-tennis"></i> Quản lý Sân cầu lông</h3>
    <a class="btn btn-primary" href="/Courts/Create">
        <i class="fas fa-plus"></i> Thêm sân mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag"></i> ID</th>
                        <th><i class="fas fa-table-tennis"></i> Tên sân</th>
                        <th><i class="fas fa-info-circle"></i> Trạng thái</th>
                        <th width="150"><i class="fas fa-cogs"></i> Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CourtName</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check"></i> Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times"></i> Tạm dừng</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-warning me-2" href="/Courts/Edit/@item.Id" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" href="/Courts/Delete/@item.Id" title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa sân này?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
