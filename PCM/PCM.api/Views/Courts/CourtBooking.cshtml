@{
    ViewData["Title"] = "Đặt sân cầu lông";
}

<div class="container py-4">
    <div class="card mx-auto" style="max-width:900px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-calendar-plus"></i> Đặt sân - Sân cầu lông</h4>
        </div>
        <div class="card-body">
            <form id="bookingForm" method="post" action="/Bookings/Create">
                <input name="__RequestVerificationToken" type="hidden" />

                <div class="mb-3">
                    <label class="form-label">Chọn loại dịch vụ</label>
                    <select name="courtName" class="form-select">
                        <option value="Sân cầu lông">Sân cầu lông</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input name="memberName" class="form-control" placeholder="Nguyễn Văn A" required />
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Ngày</label>
                        <input type="date" name="bookingDate" id="bookingDate" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Giờ bắt đầu</label>
                        <select name="startHour" id="startHour" class="form-select" required>
                            @for (int h = 6; h <= 22; h++) {
                                <option value="@h">@h:00</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Giờ kết thúc</label>
                        <select name="endHour" id="endHour" class="form-select" required>
                            @for (int h = 7; h <= 23; h++) {
                                <option value="@h">@h:00</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <div id="availability" class="alert alert-info" style="display:none;"></div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2"><i class="fas fa-check"></i> Đặt sân</button>
                    <button type="button" id="checkBtn" class="btn btn-secondary"><i class="fas fa-search"></i> Kiểm tra lịch</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/court.js"></script>
}
