@model List<PCM.Models._999_Booking>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-white mb-0"><i class="fas fa-calendar-check"></i> Danh sách đặt lịch</h3>
    <a href="/Bookings/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Đặt lịch mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-table-tennis"></i> Sân</th>
                        <th><i class="fas fa-user"></i> Hội viên</th>
                        <th><i class="fas fa-calendar"></i> Ngày</th>
                        <th><i class="fas fa-clock"></i> Giờ</th>
                        <th><i class="fas fa-info-circle"></i> Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@(b.Court?.CourtName ?? "N/A")</td>
                            <td>@(b.Member?.FullName ?? "N/A")</td>
                            <td>@b.BookingDate.ToString("dd/MM/yyyy")</td>
                            <td>@b.StartHour:00 - @b.EndHour:00</td>
                            <td>
                                <span class="badge bg-primary">@b.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
