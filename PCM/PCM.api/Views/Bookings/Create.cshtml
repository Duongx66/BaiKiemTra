@{
    ViewData["Title"] = "Đặt lịch";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-calendar-plus"></i> Đặt lịch sân cầu lông</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-table-tennis"></i> Tên sân <span class="text-danger">*</span></label>
                            <input name="courtName" class="form-control" placeholder="VD: Sân 1" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-user"></i> Tên hội viên <span class="text-danger">*</span></label>
                            <input name="memberName" class="form-control" placeholder="VD: Nguyễn Văn A" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-calendar"></i> Ngày <span class="text-danger">*</span></label>
                            <input type="date" name="bookingDate" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label"><i class="fas fa-clock"></i> Giờ bắt đầu <span class="text-danger">*</span></label>
                            <input type="number" name="startHour" class="form-control" min="5" max="22" required />
                        </div>

                        <div class="col-md-3 mb-3">
                            <label class="form-label"><i class="fas fa-clock"></i> Giờ kết thúc <span class="text-danger">*</span></label>
                            <input type="number" name="endHour" class="form-control" min="6" max="23" required />
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> <strong>Lưu ý:</strong> Nếu sân hoặc hội viên chưa tồn tại, hệ thống sẽ tự động tạo mới.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary me-md-2">
                            <i class="fas fa-check"></i> Đặt lịch
                        </button>
                        <a href="/Bookings" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
