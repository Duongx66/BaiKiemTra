@{
    ViewData["Title"] = "Quản Lý Quỹ";
}

<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-4">
                <i class="fas fa-money-bill-wave"></i> Quản Lý Quỹ
            </h1>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#addFundModal">
                <i class="fas fa-plus"></i> Thêm Khoản Thu
            </button>
            <button class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
                <i class="fas fa-minus"></i> Thêm Khoản Chi
            </button>
        </div>
    </div>

    <!-- Fund Summary -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Tổng Thu</h6>
                    <h2>@(ViewBag.TotalFunds == 0 ? "0" : ViewBag.TotalFunds).000 ₫</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Tổng Chi</h6>
                    <h2>@(ViewBag.TotalExpenses == 0 ? "0" : ViewBag.TotalExpenses).000 ₫</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Số Dư Quỹ</h6>
                    <h2>@((ViewBag.TotalFunds ?? 0) - (ViewBag.TotalExpenses ?? 0)).000 ₫</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Giao Dịch Quỹ</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> Chức năng quản lý quỹ đang được phát triển. Vui lòng quay lại sau.
                    </div>
                    
                    <!-- Placeholder for transactions table -->
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Ngày</th>
                                    <th>Mô Tả</th>
                                    <th>Loại</th>
                                    <th>Số Tiền</th>
                                    <th>Người Ghi Nhận</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Chưa có giao dịch nào</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-md-12">
            <a href="/Dashboard/AdminPanel" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="addFundModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Thêm Khoản Thu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Ngày</label>
                        <input type="date" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô Tả</label>
                        <input type="text" class="form-control" placeholder="VD: Tiền đặt sân tháng 1" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số Tiền</label>
                        <input type="number" class="form-control" placeholder="0" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success">Thêm</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-minus"></i> Thêm Khoản Chi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Ngày</label>
                        <input type="date" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô Tả</label>
                        <input type="text" class="form-control" placeholder="VD: Bảo trì sân" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số Tiền</label>
                        <input type="number" class="form-control" placeholder="0" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger">Thêm</button>
            </div>
        </div>
    </div>
</div>

<style>
    h1 {
        color: #333;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 8px;
    }

    .btn-lg {
        margin: 0 5px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
</style>
