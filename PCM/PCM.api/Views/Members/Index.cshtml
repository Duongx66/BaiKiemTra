@model IEnumerable<PCM.api.Models._999_Member>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-white mb-0"><i class="fas fa-users"></i> Quản lý Hội viên</h3>
    <a class="btn btn-primary" href="/Members/Create">
        <i class="fas fa-plus"></i> Thêm hội viên
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag"></i> ID</th>
                        <th><i class="fas fa-user"></i> Họ tên</th>
                        <th><i class="fas fa-calendar"></i> Ngày tham gia</th>
                        <th><i class="fas fa-star"></i> Rating DUPR</th>
                        <th><i class="fas fa-trophy"></i> Trận thắng</th>
                        <th width="150"><i class="fas fa-cogs"></i> Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FullName</td>
                            <td>@item.JoinDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.DuprRating.ToString("F2")</td>
                            <td><span class="badge bg-success">@item.MatchesWon</span></td>
                            <td>
                                <a class="btn btn-sm btn-outline-warning me-2" href="/Members/Edit/@item.Id" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" href="/Members/Delete/@item.Id" title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa hội viên này?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>